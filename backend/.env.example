# FrameFlow Backend Environment Configuration Example
# Copy this file to .env and update with your actual values

# ===== DATABASE CONFIGURATION =====
# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/frameflow_db?retryWrites=true&w=majority&appName=Cluster0

# ===== SECURITY CONFIGURATION =====
# JWT Secret Key - MUST be changed for production
# Generate a strong, random secret key (minimum 32 characters)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
SESSION_SECRET=your_session_secret_key_here

# ===== SERVER CONFIGURATION =====
PORT=5000
NODE_ENV=development

# ===== CLOUDINARY CONFIGURATION =====
# Media Upload Service - Sign up at cloudinary.com
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===== SMS CONFIGURATION (Twilio) =====
# Sign up at twilio.com for SMS services
# Get these from your Twilio dashboard
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ===== EMAIL CONFIGURATION (Optional) =====
# Gmail SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ===== BREVO EMAIL SERVICE (Alternative) =====
BREVO_API_KEY=your_brevo_api_key

# ===== URLS =====
# Development URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Production URLs (uncomment for deployment)
# FRONTEND_URL=https://your-vercel-app.vercel.app
# BACKEND_URL=https://your-render-app.onrender.com

# ===== OPTIONAL CONFIGURATIONS =====
RATE_LIMIT=100
MAX_FILE_SIZE=50
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
DEBUG=true
DETAILED_ERRORS=true